#! /bin/bash
set -eu

ROOT="$(dirname "${0}")"

source "${ROOT}"/globals

function install_variant {
  local variant="${1}"
  local variant_dir="${ROOT}/fonts/${1}"
  local dest
  if [ "${EUID}" -eq 0 ]; then
    dest=/usr/local/share/fonts/jambo
  else
    dest="${HOME}/.local/share/fonts/jambo"
  fi
  if [ -d "${variant_dir}/" ]; then
    mkdir -p "${dest}"
    cp -Ra "${variant_dir}/" "${dest}"
  else
    show_error "Font ${variant@Q} not found. Have fonts been compiled?"
    exit 3
  fi
}

function print_usage {
  show_header "Usage:"
  cat << EOF
  -u|--unhinted     install unhinted fils (default:false)
  -n|--nerd         install nerd-patched fils (default:false)
  -h|--help         print (this) message
EOF
}

OPTIONS=hnu
LONGOPTIONS=help,nerd,unhinted
PARSED=$(getopt -o ${OPTIONS} --long ${LONGOPTIONS} -n "${0}" -- "${@}")
eval set -- "${PARSED}"

while [ ${#} -ge 1 ]; do
  case "${1}" in
    -u | --unhinted)
      UNHINTED=true
      shift
      ;;
    -n | --nerd)
      NERD=true
      shift
      ;;
    -h | --help)
      print_usage
      exit
      ;;
    --)
      shift
      break
      ;;
    *)
      echo "ERROR: invalid flag ${1@Q}."
      exit 3
      ;;
  esac
done

install_variant ttf"${UNHINTED:+-unhinted}${NERD:+-nerd}"
